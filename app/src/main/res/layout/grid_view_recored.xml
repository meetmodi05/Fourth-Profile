<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/img_curvbg"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:src="@drawable/cute_illustration" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/inner_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv1"
            android:text="$450.00"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="56dp"
            android:src="@drawable/outline_favorite_border_24" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/cloth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceText"
        android:text="bodycon dress"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/color_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cloth_title"
        android:text="4 color"
        android:textAllCaps="false"
        android:textSize="15sp" />

</androidx.appcompat.widget.LinearLayoutCompat>